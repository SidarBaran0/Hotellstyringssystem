@page "/maintenance-tasks"
@using DatabaseLibrary.Context
@using DatabaseLibrary.Models
@using Microsoft.EntityFrameworkCore
@inject Oblig4Context DbContext

<h1>Maintenance tasks</h1>
@if (maintenanceRequests == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Room ID</th>
            <th>User ID</th>
            <th>Status</th>
            <th>Notes</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var request in maintenanceRequests)
        {
            <tr>
                <td>@request.Id</td>
                <td>@request.Room_id</td>
                <td>@request.User_id</td>
                <td>@request.Status</td>
                <td>@request.Notes</td>
                <td>
                    @if (isEditing && editingRequest == request)
                    {
                        <button @onclick="SaveEdit">Save</button>
                        <button @onclick="CancelEdit">Cancel</button>
                    }
                    else
                    {
                        <button @onclick="() => StartEdit(request)">Edit</button>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private List<Maintenance_requests>? maintenanceRequests;
    private bool isEditing;
    private Maintenance_requests editingRequest;

    protected override async Task OnInitializedAsync()
    {
        maintenanceRequests = await DbContext.Maintenance_requests.ToListAsync();
        if (maintenanceRequests == null)
        {
            maintenanceRequests = new List<Maintenance_requests>();
        }
    }


    void StartEdit(Maintenance_requests request)
    {
        editingRequest = request;
        isEditing = true;
    }

    async Task SaveEdit()
    {
        DbContext.Maintenance_requests.Update(editingRequest);
        await DbContext.SaveChangesAsync();

        maintenanceRequests = await DbContext.Maintenance_requests.ToListAsync();
        isEditing = false;
    }

    void CancelEdit()
    {
        DbContext.Entry(editingRequest).State = EntityState.Unchanged;
        isEditing = false;
    }


}